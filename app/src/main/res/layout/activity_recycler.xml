<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semiWhite"
    tools:context=".RecyclerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Demos for RecyclerView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_22sdp"

        android:textStyle="bold"
        android:textColor="@color/DarkBlue"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/nested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Nested Recycler"
        android:textColor="@color/DarkBlue"
        android:layout_marginTop="@dimen/_100sdp"
        android:backgroundTint="@color/white"
        android:textAllCaps="true"/>

    <Button
        android:id="@+id/multipleClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Multi Selection"
        />


    <Button
        android:id="@+id/singleClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_100sdp"
        android:text="Single selection"
        android:backgroundTint="@color/DarkSkyBlue"
        android:textAllCaps="false"/>




</androidx.constraintlayout.widget.ConstraintLayout>